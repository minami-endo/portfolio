<%= attachment_image_tag @item, :image, size:'150x100' %>
<%= item.name %>
<%= item.caption %>
<%= item.price %>

<h1>アレンジレシピランキング</h1>
<% recipe_ranks.each.with_index(1) do |recipe_rank, rank| %>
  第<%= rank %>位
  <%= attachment_image_tag recipe_rank, :image, size:'150x100' %>
  <%= link_to recipe_rank.name, public_recipe_path(recipe_rank) %>
  <% if public_user_signed_in? %>
    <%= render 'public/likes/like', recipe: recipe_rank %>
  <% else %>
    いいね数<%= recipe_rank.likes_count %>
  <% end %>
<% end %>
<% not_likes_recipes.each do |recipe_rank| %>
  第<%= (@recipe_ranks.count + 1).to_s %>位
  <%= attachment_image_tag recipe_rank, :image, size:'150x100' %>
  <%= link_to recipe_rank.name, public_recipe_path(recipe_rank) %>
  <% if public_user_signed_in? %>
    <%= render 'public/likes/like', recipe: recipe_rank %>
  <% else %>
    いいね数<%= recipe_rank.likes_count %>
  <% end %>
<% end %>