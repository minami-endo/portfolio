<p>Find me in app/views/admins/items/new.html.erb</p>


<h1>新商品の投稿</h1>

<%= form_for(@item, url: admins_items_path, method: :post) do |f| %>
    <%= f.attachment_field :image %>
	<%= f.label :商品名 %>
	  <%= f.text_field :name %>
	<%= f.label :商品説明 %>
	  <%= f.text_field :caption %>
	<%= f.label :税抜価格 %>
	  <%= f.text_field :price %>
	<%= f.submit "作成する" %>
<% end %>