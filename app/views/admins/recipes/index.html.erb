<h1>投稿されたレシピ</h1>

<% @recipes.each do |recipe| %>
    <%= attachment_image_tag recipe, :image, size:'150x100' %>
    <%= recipe.user.name %>
	<%= link_to recipe.name, admins_recipe_path(recipe) %>
	<%= recipe.ingredient %>
	<%= recipe.time %>分
	<%= recipe.how_to_make %>
    いいね数<%= recipe.likes_count %>
<% end %>
