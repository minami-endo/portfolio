<h1>Admins::Recipes#home</h1>
<p>Find me in app/views/admins/recipes/home.html.erb</p>

<div class="container">
<div class="headline">本日投稿されたレシピ<%= @today_recipe %>件</div>
<div class="admins_today_recipe_content">
<% @recipes.each do |recipe| %>
    <% if(recipe[:created_at].to_s.match(/#{Date.today.to_s}.+/)) %>
      <%= recipe.name %>
      <%= attachment_image_tag recipe, :image, size:'150x100' %>
    <% end %>
<% end %>
</div>

<div class="headline">今シーズンのレシピランキング</div>
<div class="period"><%= "#{Recipe.period[:start_month].month}月~#{Recipe.period[:end_month].month}月" %></div>
<% @monthly_ranking.each.with_index(1) do |monthly_ranking, c| %>
  <div class="index_recipe_box clearfix">
  	<div class="home_rank">第<%= c %>位</div>
      <div class="home_image">
	    <%= attachment_image_tag monthly_ranking, :image, size:'150x100' %>
	    <%= link_to monthly_ranking.name, public_recipe_path(monthly_ranking) %>
	  </div>
	  <div class="home_iine"><%= render 'public/likes/admin_like', recipe: monthly_ranking %></div>
  </div>
<% end %>
    <%= paginate @monthly_ranking %>
</div>
