
<div class="like-link" id="like-link-<%= recipe.id %>">
  <% if current_public_user.likes.find_by(recipe_id: recipe.id) %>
    <%= link_to public_unlike_path(recipe.id), method: :delete, remote: true do %>
        <div class = "iine__button"><i class="fas fa-heart"></i><%= recipe.likes.count %></div>
    <% end %>
  <% else %>
    <%= link_to public_like_path(recipe.id), method: :post, remote: true do %>
        <div class = "iine__button"><i class="far fa-heart"></i><%= recipe.likes.count %></div>
    <% end %>
  <% end %>
</div>

