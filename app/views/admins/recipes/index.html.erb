<h1>Admins::Recipes#index</h1>
<p>Find me in app/views/admins/recipes/index.html.erb</p>


<div class="headline">投稿されたレシピ</div>
<div class="index_recipe_content">
  <div class="index_search_box">
    <%= search_form_for @search, url: admins_recipes_path do |f| %>
      <%= f.select( :sorts, { '並び替え': 'id desc', '投稿の古い順': 'updated_at asc', '投稿の新しい順': 'updated_at desc', 'いいね!の多い順': 'likes_count desc' } , { selected: params[:q][:sorts] }, { onchange: 'this.form.submit()'} ) %><br>
      レシピ名：<%= f.search_field :name_cont, placeholder: '検索するテキストを入力...' %></dt>
      <%= f.submit ("検索") , class: 'search-btn'%></dd>
    <% end %>
  </div>
    <% @recipes.each do |recipe| %>
      <div class="index_recipe_box">
        <div class="recipe_info col-lg-6">
          <%= attachment_image_tag recipe, :image, size:'150x100' %>
          <%= link_to recipe.name, admins_recipe_path(recipe) %>
          <%= recipe.time %>分
          難易度：<%= recipe.difficulty_level_i18n %>
        </div>
        <div class="relation_user col-lg-6">
          <p>投稿者</p>
          <%= attachment_image_tag recipe.user, :image, size:'50x50' %>
          <%= link_to recipe.user.name, admins_user_path(recipe.user) %>
        </div>
        <div class="index_recipe_iine">
          <%= render 'public/likes/admin_like', recipe: recipe %>
        </div>
      </div>
    <% end %>
</div>

<%= paginate @recipes %>
