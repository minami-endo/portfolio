<h1>Public::Users#edit</h1>
<p>Find me in app/views/public/users/edit.html.erb</p>


<%= form_for(@user, url: public_user_path(@user), method: :patch) do |f| %>
    <%= f.attachment_field :image %>
	<%= f.label :名前 %>
	  <%= f.text_field :name %>
	<%= f.label :コメント %>
	  <%= f.text_field :comment %>
	  <%= f.label :電話番号 %>
	  <%= f.text_field :phone_number %>
	<%= f.label :郵便番号 %>
	  <%= f.text_field :postal_code %>
	  <%= f.label :住所 %>
	  <%= f.text_field :address %>
	<%= f.label :メールアドレス %>
	  <%= f.text_field :email %>
	<%= f.submit "更新する" %>
<% end %>

<%= link_to "プロフィール画面へ", public_user_path(@user) %>
