<h1>Admins::Recipes#top</h1>
<p>Find me in app/views/admins/recipes/top.html.erb</p>

<div class="headline">今シーズンの最人気レシピ</div>
<div class="dot">
<div class="container">
  <div class="admins_recipi_name">レシピ名「<%= @recipe_ranks.name %>」</div>
  	  <div class="row">
	  	  <div class="show_recipe_image col-lg-4">
	        <%= attachment_image_tag @recipe_ranks, :image, size:'250x170' %>
	      </div>
	      <div class="col-lg-5">
	      	<table class="table">
				<tr>
					<td class="recipe_title">材料</td>
					<td><%= @recipe_ranks.ingredient %></td>
				</tr>
				<tr>
					<td class="recipe_title">調理時間</td>
					<td><%= @recipe_ranks.time %>分</td>
				</tr>
				<tr>
					<td class="recipe_title">作り方</td>
					<td><%= @recipe_ranks.how_to_make %></td>
				</tr>
				<tr>
					<td class="recipe_title">難易度</td>
					<td><%= @recipe_ranks.difficulty_level_i18n %></td>
				</tr>
				<tr>
					<td class="recipe_title">投稿日時</td>
					<td><%= @recipe_ranks.created_at.to_s(:datetime_jp) %></td>
				</tr>
				<tr>
					<td class="recipe_title">投稿者</td>
					<td><%= link_to @recipe_ranks.user.name, admins_user_path(@recipe_ranks.user) %></td>
				</tr>
			</table>
	      </div>
	      <div class="col-lg-3"></div>
	　</div>
	  <div class="row">
	  	<div class="admins_recipe_iine">
	      <%= render 'public/likes/admin_like', recipe: @recipe_ranks %>
	    </div>
	  </div>
</div>
</div>
