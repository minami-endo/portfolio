<h1>Public::Recipes#edit</h1>
<p>Find me in app/views/public/recipes/edit.html.erb</p>

<h1>レシピの編集</h1>

<%= form_for(@recipe, url: public_recipe_path(@recipe), method: :patch) do |f| %>
    <%= f.attachment_field :image %>
	<%= f.label :レシピ名 %>
	  <%= f.text_field :name %>
	<%= f.label :材料 %>
	  <%= f.text_field :ingredient %>
	<%= f.label :調理時間 %>
	  <%= f.text_field :time %>
	<%= f.label :作り方 %>
	  <%= f.text_area :how_to_make %>
	<%= f.submit "更新する" %>
<% end %>